<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ECECEC;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.biblioteca3.Controllers.CadastroLivroController">
    <children>
        <VBox alignment="CENTER" layoutX="350.0" layoutY="200.0" prefHeight="500.0" prefWidth="350.0" spacing="10.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" AnchorPane.leftAnchor="225.0" AnchorPane.topAnchor="50.0">
            <children>
                <Label text="Cadastro de Livro" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="txtTitulo" prefHeight="30.0" prefWidth="250.0" promptText="Título do Livro">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="txtAutor" prefHeight="30.0" prefWidth="250.0" promptText="Autor">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="txtISBN" prefHeight="30.0" prefWidth="250.0" promptText="ISBN">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="txtAno" prefHeight="30.0" prefWidth="250.0" promptText="Ano de Publicação">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="txtCategoria" prefHeight="30.0" prefWidth="250.0" promptText="Categoria">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="txtQuantidade" prefHeight="30.0" prefWidth="250.0" promptText="Quantidade">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Button fx:id="btnSalvar" mnemonicParsing="false" onAction="#salvarLivro" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #3F51B5; -fx-background-radius: 6; -fx-text-fill: #ffffff;" text="Salvar" />
                        <Button fx:id="btnLimpar" mnemonicParsing="false" onAction="#limparCampos" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #3F51B5; -fx-background-radius: 6; -fx-text-fill: #ffffff;" text="Limpar" />
                        <Button fx:id="btnVoltar" mnemonicParsing="false" onAction="#voltar" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #3F51B5; -fx-background-radius: 6; -fx-text-fill: #ffffff;" text="Voltar" />
                    </children>
                </HBox>
            </children></VBox>
    </children>
</AnchorPane>