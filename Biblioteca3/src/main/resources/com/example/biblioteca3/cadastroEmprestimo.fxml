<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ECECEC;" xmlns="http://javafx.com/javafx/23.0." xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.biblioteca3.Controllers.CadastroEmprestimoController">
    <children>
        <VBox alignment="CENTER" layoutX="350.0" layoutY="200.0" prefHeight="450.0" prefWidth="350.0" spacing="10.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);" AnchorPane.leftAnchor="225.0" AnchorPane.topAnchor="80.0">
            <children>
                <Label alignment="TOP_CENTER" text="Cadastro de Empréstimo" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <ComboBox fx:id="comboCliente" prefHeight="30.0" prefWidth="250.0" promptText="Selecione o cliente" />
                <ComboBox fx:id="comboLivro" prefHeight="30.0" prefWidth="250.0" promptText="Selecione o livro" />
                <TextField fx:id="txtDataEmprestimo" prefHeight="30.0" prefWidth="250.0" promptText="Data do empréstimo" />
                <TextField fx:id="txtDataDevolucao" prefHeight="30.0" prefWidth="250.0" promptText="Data de devolução" />
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Button fx:id="btnConfirmar" mnemonicParsing="false" onAction="#confirmar" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #3F51B5; -fx-background-radius: 6; -fx-text-fill: #ffffff;" text="Confirmar" />
                        <Button fx:id="btnLimpar" mnemonicParsing="false" onAction="#limparCampos" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #3F51B5; -fx-background-radius: 6; -fx-text-fill: #ffffff;" text="Limpar" />
                        <Button fx:id="btnVoltar" mnemonicParsing="false" onAction="#voltar" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #3F51B5; -fx-background-radius: 6; -fx-text-fill: #ffffff;" text="Voltar" />
                    </children></HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>